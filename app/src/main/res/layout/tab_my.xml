<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/my_title_relayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#ffffff"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/my_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="消息"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            />

        <ImageView
            android:id="@+id/my_img_notify_dot"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_text_edit"
            android:layout_marginLeft="-20dp"
            android:src="@drawable/notification_dot"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/my_top_head_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:clickable="true"
                android:background="@drawable/selector_my_top_head_bg">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/my_img_head"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_25"
                    android:src="@drawable/chart_room_default_head"
                    app:civ_border_width="@dimen/dp_0"
                    app:civ_border_color="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignTop="@+id/my_img_head"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@+id/my_img_head"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_26"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_text_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:text="浮生南梦"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/my_img_gender"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_6"
                            app:srcCompat="@drawable/my_gender_man" />

                        <TextView
                            android:id="@+id/my_text_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:textColor="#32b7b9"
                            android:textStyle="bold"
                            android:text="爱心大师"
                            android:textSize="@dimen/sp_16"
                            android:layout_marginTop="@dimen/dp_2"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/my_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:text="ID:1002506"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_5"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#aaaaaa">

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/my_relayout_yue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/selector_register_layout_bg"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="爱币余额"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/my_text_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="10   >"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_relayout_liquan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/selector_register_layout_bg">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="我的礼券"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/my_text_liquan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text=">"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_relayout_shouyi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/selector_register_layout_bg"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="收益（元）"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/my_text_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="0.00   >"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_relayout_footprint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/selector_register_layout_bg"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="我的足迹"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/my_text_footprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text=">"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_relayout_settings"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/selector_register_layout_bg"
                    android:layout_marginTop="@dimen/dp_20"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="设置"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/my_text_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text=">"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/ip_edit"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="wrap_content"
                    android:text="192.168.1.101"
                    android:layout_marginTop="@dimen/dp_20"/>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_marginTop="@dimen/dp_5"/>

                <CheckBox
                    android:id="@+id/checkbox_remote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="远程"
                    android:layout_marginTop="@dimen/dp_5"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>