<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/reset_password_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:text="重置密码"
            android:textSize="@dimen/sp_30"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/reset_password_edit_userName"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/login_edit_bg"
            android:hint="输入用户名"
            android:textColorHint="#999999"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_8">

        </EditText>

        <EditText
            android:id="@+id/reset_password_edit_ps1"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/login_edit_bg"
            android:hint="输入密码"
            android:textColorHint="#999999"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_8">

        </EditText>

        <EditText
            android:id="@+id/reset_password_edit_ps2"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/login_edit_bg"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColorHint="#999999"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_8">

        </EditText>

        <Button
            android:id="@+id/reset_password_btn_commit"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_33"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/selector_login_btn_bg"
            android:text="确认提交"
            android:textColor="@drawable/selector_login_btn_text"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <Button
        android:id="@+id/reset_password_btn_close"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/image_back"/>
</RelativeLayout>